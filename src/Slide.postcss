.Slide {
  padding: 3vw;
  font-size: 3vw;

  .smaller {
    font-size: 1vw;
  }

  &.centered {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    > h1 {
      margin-top: 0;
    }
    > h2 {
      margin: 0;
    }
  }

  > h1.title {
    margin-top: 0;
  }
  pre, code {
    line-height: 1;
    font-size: 2vw;
  }
}
